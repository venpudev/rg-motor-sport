---
import { makeCarSlug } from '../lib/slug.ts';

export interface Props {
  car: {
    id: number;
    brand: string;
    model: string;
    year: number;
    price: number;
    originalPrice?: number;
    mileage: number;
    fuel: string;
    transmission: string;
    color: string;
    engine: string;
    doors: number;
    description: string;
    images: string[];
    features: string[];
  };
}

const { car } = Astro.props;
const slug = makeCarSlug(car.brand, car.model, car.year);

// Format price in CLP
const formatPrice = (price: number) => {
  return new Intl.NumberFormat('es-CL', {
    style: 'currency',
    currency: 'CLP',
    minimumFractionDigits: 0
  }).format(price);
};

const hasDiscount = car.originalPrice && car.originalPrice > car.price;
const discountPercentage = hasDiscount 
  ? Math.round(((car.originalPrice - car.price) / car.originalPrice) * 100)
  : 0;
---

<article class="group relative bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-500 overflow-hidden animate-fade-in">
  {hasDiscount && (
    <div class="absolute top-4 left-4 z-10 bg-accent-500 text-white px-3 py-1 rounded-full text-sm font-semibold shadow-lg">
      -{discountPercentage}%
    </div>
  )}
  
  <!-- Image Container -->
  <div class="relative overflow-hidden bg-neutral-100 aspect-[16/10]">
    <img 
      src={car.images[0]} 
      alt={`${car.brand} ${car.model} ${car.year}`}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    
    <!-- Quick Actions Overlay -->
    <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-y-2 group-hover:translate-y-0">
      <div class="flex flex-col space-y-2">
        <button class="p-2 bg-white/90 backdrop-blur-sm rounded-full shadow-lg hover:bg-white transition-colors duration-200">
          <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        </button>
        <button class="p-2 bg-white/90 backdrop-blur-sm rounded-full shadow-lg hover:bg-white transition-colors duration-200">
          <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <!-- Header -->
    <div class="mb-4">
      <div class="flex items-center justify-between mb-2">
        <span class="text-primary-600 text-sm font-semibold uppercase tracking-wide">{car.brand}</span>
        <span class="text-neutral-500 text-sm">{car.year}</span>
      </div>
      <h3 class="text-xl font-bold text-neutral-900 mb-1">{car.model}</h3>
      <p class="text-neutral-600 text-sm line-clamp-2">{car.description}</p>
    </div>

    <!-- Specifications -->
    <div class="grid grid-cols-2 gap-3 mb-4">
      <div class="flex items-center text-sm text-neutral-600">
        <svg class="w-4 h-4 mr-2 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span>{car.engine}</span>
      </div>
      <div class="flex items-center text-sm text-neutral-600">
        <svg class="w-4 h-4 mr-2 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>{car.mileage.toLocaleString('es-CL')} km</span>
      </div>
      <div class="flex items-center text-sm text-neutral-600">
        <svg class="w-4 h-4 mr-2 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        <span>{car.fuel}</span>
      </div>
      <div class="flex items-center text-sm text-neutral-600">
        <svg class="w-4 h-4 mr-2 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span>{car.transmission}</span>
      </div>
    </div>

    <!-- Price and CTA -->
    <div class="border-t border-neutral-200 pt-4">
      <div class="flex items-center justify-between mb-4">
        <div>
          {hasDiscount && (
            <p class="text-sm text-neutral-500 line-through mb-1">
              {formatPrice(car.originalPrice)}
            </p>
          )}
          <p class="text-2xl font-bold text-primary-600">
            {formatPrice(car.price)}
          </p>
        </div>
        <div class="text-right">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            Disponible
          </span>
        </div>
      </div>
      
      <div class="space-y-2">
        <a 
          href={`/vehiculos/${slug}`}
          class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg hover:shadow-xl flex items-center justify-center space-x-2"
        >
          <span>Ver Detalles</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
        
        <button class="w-full bg-accent-500 hover:bg-accent-600 text-white font-semibold py-2.5 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.515z"/>
          </svg>
          <span>WhatsApp</span>
        </button>
      </div>
    </div>
  </div>
</article>

<style>
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>