---
import Layout from '../../layouts/Layout.astro';
import CarCard from '../../components/CarCard.astro';
import { cars } from '../../data/cars.js';
import { makeCarSlug, parseCarSlug } from '../../lib/slug.ts';

export async function getStaticPaths() {
  return cars.map(car => ({
    params: { slug: makeCarSlug(car.brand, car.model, car.year) },
    props: { car }
  }));
}

const { slug } = Astro.params;
const { car } = Astro.props;

if (!car) {
  return Astro.redirect('/404');
}

// Format price in CLP
const formatPrice = (price: number) => {
  return new Intl.NumberFormat('es-CL', {
    style: 'currency',
    currency: 'CLP',
    minimumFractionDigits: 0
  }).format(price);
};

// Calculate discount
const hasDiscount = car.originalPrice && car.originalPrice > car.price;
const discountAmount = hasDiscount ? car.originalPrice - car.price : 0;
const discountPercentage = hasDiscount 
  ? Math.round((discountAmount / car.originalPrice) * 100)
  : 0;

// Find similar cars (same brand or similar price range)
const priceRange = car.price * 0.3; // 30% price range
const similarCars = cars
  .filter(c => c.id !== car.id)
  .filter(c => 
    c.brand === car.brand || 
    (c.price >= car.price - priceRange && c.price <= car.price + priceRange)
  )
  .slice(0, 3);

// WhatsApp message
const whatsappMessage = encodeURIComponent(car.whatsappMessage);
const whatsappUrl = `https://wa.me/56912345678?text=${whatsappMessage}`;

// Generate structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Car",
  "name": `${car.brand} ${car.model} ${car.year}`,
  "brand": {
    "@type": "Brand",
    "name": car.brand
  },
  "model": car.model,
  "productionDate": car.year.toString(),
  "color": car.color,
  "fuelType": car.fuel,
  "vehicleTransmission": car.transmission,
  "mileageFromOdometer": {
    "@type": "QuantitativeValue",
    "value": car.mileage,
    "unitCode": "KMT"
  },
  "offers": {
    "@type": "Offer",
    "priceCurrency": "CLP",
    "price": car.price,
    "availability": "https://schema.org/InStock",
    "seller": {
      "@type": "AutoDealer",
      "name": "GOCARS"
    }
  },
  "image": car.images,
  "description": car.description
};
---

<Layout title={`${car.brand} ${car.model} ${car.year} - GOCARS`}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <main class="min-h-screen bg-neutral-50">
    <!-- Breadcrumbs -->
    <nav class="bg-white border-b" aria-label="Breadcrumb">
      <div class="container mx-auto px-4 py-4">
        <ol class="flex items-center space-x-2 text-sm">
          <li>
            <a href="/" class="text-primary-600 hover:text-primary-700 font-medium">Inicio</a>
          </li>
          <svg class="w-4 h-4 text-neutral-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <li>
            <a href="/catalogo" class="text-primary-600 hover:text-primary-700 font-medium">Catálogo</a>
          </li>
          <svg class="w-4 h-4 text-neutral-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <li class="text-neutral-700 font-medium">
            {car.brand} {car.model} {car.year}
          </li>
        </ol>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Image Gallery -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-2xl shadow-card overflow-hidden">
            <!-- Main Image -->
            <div class="relative aspect-[16/10] bg-neutral-100">
              <img 
                id="mainImage"
                src={car.images[0]} 
                alt={`${car.brand} ${car.model} ${car.year}`}
                class="w-full h-full object-cover"
              />
              {hasDiscount && (
                <div class="absolute top-6 left-6 bg-accent-500 text-white px-4 py-2 rounded-full text-lg font-bold shadow-lg">
                  -{discountPercentage}% OFF
                </div>
              )}
              <div class="absolute top-6 right-6 bg-green-500 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg">
                Disponible
              </div>
            </div>
            
            <!-- Thumbnail Gallery -->
            <div class="p-6">
              <div class="grid grid-cols-4 gap-4">
                {car.images.map((image, index) => (
                  <button 
                    class="thumbnail-btn relative aspect-square bg-neutral-100 rounded-lg overflow-hidden border-2 border-transparent hover:border-primary-500 transition-all duration-200"
                    data-image={image}
                  >
                    <img 
                      src={image} 
                      alt={`${car.brand} ${car.model} vista ${index + 1}`}
                      class="w-full h-full object-cover"
                    />
                  </button>
                ))}
              </div>
            </div>
          </div>
        </div>

        <!-- Vehicle Info -->
        <div class="space-y-6">
          <!-- Header -->
          <div class="bg-white rounded-2xl shadow-card p-6">
            <div class="mb-4">
              <span class="text-primary-600 text-sm font-semibold uppercase tracking-wide">{car.brand}</span>
              <h1 class="text-3xl font-bold text-neutral-900 mt-2">{car.model} {car.year}</h1>
              <p class="text-neutral-600 mt-2">{car.description}</p>
            </div>

            <!-- Price -->
            <div class="mb-6">
              {hasDiscount && (
                <p class="text-lg text-neutral-500 line-through mb-1">
                  {formatPrice(car.originalPrice)}
                </p>
              )}
              <div class="flex items-baseline space-x-3">
                <p class="text-4xl font-bold text-primary-600">
                  {formatPrice(car.price)}
                </p>
                {hasDiscount && (
                  <span class="text-lg text-green-600 font-semibold">
                    Ahorra {formatPrice(discountAmount)}
                  </span>
                )}
              </div>
            </div>

            <!-- CTA Buttons -->
            <div class="space-y-3">
              <a 
                href={whatsappUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 rounded-xl transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg hover:shadow-xl flex items-center justify-center space-x-3"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.515z"/>
                </svg>
                <span>Contactar por WhatsApp</span>
              </a>
              
              <button class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
                <span>Consultar Financiamiento</span>
              </button>
              
              <button class="w-full bg-accent-500 hover:bg-accent-600 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 flex items-center justify-center space-x-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <span>Agendar Prueba de Manejo</span>
              </button>
            </div>
          </div>

          <!-- Quick Specs -->
          <div class="bg-white rounded-2xl shadow-card p-6">
            <h2 class="text-xl font-bold text-neutral-900 mb-4">Especificaciones</h2>
            <div class="space-y-3">
              <div class="flex justify-between items-center py-2 border-b border-neutral-100 last:border-b-0">
                <span class="text-neutral-600">Motor</span>
                <span class="font-semibold text-neutral-900">{car.engine}</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-neutral-100 last:border-b-0">
                <span class="text-neutral-600">Kilometraje</span>
                <span class="font-semibold text-neutral-900">{car.mileage.toLocaleString('es-CL')} km</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-neutral-100 last:border-b-0">
                <span class="text-neutral-600">Combustible</span>
                <span class="font-semibold text-neutral-900">{car.fuel}</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-neutral-100 last:border-b-0">
                <span class="text-neutral-600">Transmisión</span>
                <span class="font-semibold text-neutral-900">{car.transmission}</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-neutral-100 last:border-b-0">
                <span class="text-neutral-600">Color</span>
                <span class="font-semibold text-neutral-900">{car.color}</span>
              </div>
              <div class="flex justify-between items-center py-2">
                <span class="text-neutral-600">Puertas</span>
                <span class="font-semibold text-neutral-900">{car.doors}</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Features Section -->
      <div class="mt-12 bg-white rounded-2xl shadow-card p-8">
        <h2 class="text-2xl font-bold text-neutral-900 mb-6">Características y Equipamiento</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {car.features.map(feature => (
            <div class="flex items-center space-x-3 p-3 bg-neutral-50 rounded-lg">
              <div class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <span class="text-neutral-700 font-medium">{feature}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Similar Vehicles -->
      {similarCars.length > 0 && (
        <div class="mt-12">
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-neutral-900 mb-4">Vehículos Similares</h2>
            <p class="text-neutral-600 max-w-2xl mx-auto">
              Otros vehículos que podrían interesarte basados en tu búsqueda actual
            </p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {similarCars.map(similarCar => (
              <CarCard car={similarCar} />
            ))}
          </div>
        </div>
      )}

      <!-- Contact Section -->
      <div class="mt-12 bg-gradient-to-r from-primary-600 to-primary-700 rounded-2xl shadow-premium">
        <div class="p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">¿Tienes preguntas sobre este vehículo?</h2>
          <p class="text-primary-100 mb-6 max-w-2xl mx-auto">
            Nuestro equipo de ventas está listo para ayudarte con cualquier consulta sobre financiamiento, garantías o características técnicas.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto">
            <a 
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors flex items-center justify-center space-x-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.515z"/>
              </svg>
              <span>WhatsApp</span>
            </a>
            <a 
              href="/contacto"
              class="bg-white text-primary-600 hover:bg-neutral-100 px-6 py-3 rounded-lg font-semibold transition-colors flex items-center justify-center space-x-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span>Contacto</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Image gallery functionality
  document.addEventListener('DOMContentLoaded', function() {
    const mainImage = document.getElementById('mainImage');
    const thumbnails = document.querySelectorAll('.thumbnail-btn');

    thumbnails.forEach(thumbnail => {
      thumbnail.addEventListener('click', function() {
        const newImageSrc = this.dataset.image;
        
        // Remove active class from all thumbnails
        thumbnails.forEach(thumb => thumb.classList.remove('border-primary-500'));
        
        // Add active class to clicked thumbnail
        this.classList.add('border-primary-500');
        
        // Update main image with fade effect
        mainImage.style.opacity = '0.5';
        setTimeout(() => {
          mainImage.src = newImageSrc;
          mainImage.style.opacity = '1';
        }, 150);
      });
    });

    // Set first thumbnail as active by default
    if (thumbnails.length > 0) {
      thumbnails[0].classList.add('border-primary-500');
    }
  });
</script>